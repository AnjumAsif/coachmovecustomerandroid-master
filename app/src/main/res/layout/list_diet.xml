<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <LinearLayout
        android:id="@+id/dietLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/diet_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight Loss"
                android:textColor="@color/Black"
                android:textSize="@dimen/_16sp" />


          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/dietDate_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="left|center"
                android:text="23 Aug, 2018"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sp" />

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/dietCancelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_toRightOf="@+id/dietDate_TV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/redColor"
                android:text="@string/dietCanceled" />

          </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/arrowIV"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="0.3"
            android:src="@drawable/right_arrow" />

    </LinearLayout>

</RelativeLayout>