<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/profile_LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_Img"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@mipmap/ic_launcher" />


            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/userName_TV"
                android:layout_below="@+id/profile_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="@color/Black"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileData_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_toRightOf="@+id/profile_LL"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.coachmovecustomer.customviews.RegularTextView
                    android:id="@+id/session_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_14sp" />
                <ImageView
                    android:id="@+id/message_IV"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chat_blue"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/address_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_12sp"
                android:drawableLeft="@drawable/location"
                android:text="@string/address"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">


                <com.coachmovecustomer.customviews.RegularTextView
                    android:id="@+id/date_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/calendar"
                    android:layout_centerVertical="true"
                    android:gravity="left|center"
                    android:text="@string/date"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/colorPrimary" />


                <com.coachmovecustomer.customviews.RegularTextView
                    android:id="@+id/time_TV"
                    android:layout_toRightOf="@+id/date_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/clock"
                    android:gravity="left|center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/time"
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/colorPrimary" />



                <com.coachmovecustomer.customviews.RegularTextView
                    android:id="@+id/cancelTV"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_email"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_cancel_background"
                    android:textSize="@dimen/_12sp"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/White" />


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>