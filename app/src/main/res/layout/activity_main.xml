<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".activity.MainActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/frameLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/toolbar">


    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/profileLL"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileIMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_white" />

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/profileTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:singleLine="true"
                android:text="@string/profile"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/workoutLL"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/workoutIMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/workout_white" />

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/workoutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:singleLine="true"
                android:text="@string/workout"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dietLL"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dietIMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/diet_white" />

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/dietTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:singleLine="true"
                android:text="@string/diet"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scheduleLL"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/scheduleIMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/schedule_white" />

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/scheduleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:singleLine="true"
                android:text="@string/schedule"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/messageLL"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/messageIMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chat_white" />

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/messageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:singleLine="true"
                android:text="@string/messages"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sp"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>