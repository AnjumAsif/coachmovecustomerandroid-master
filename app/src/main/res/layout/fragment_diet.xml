<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dietRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <com.coachmovecustomer.customviews.RegularTextView
        android:id="@+id/noDataTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noDiet"
        android:textSize="@dimen/_16sp"
        android:gravity="center"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/dietLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/diet_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight Loss"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/Black" />

            <com.coachmovecustomer.customviews.RegularTextView
                android:id="@+id/dietDate_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="left|center"
                android:textSize="@dimen/_14sp"
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="@dimen/_5sdp"
                android:text="23 Aug, 2018"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="0.3"
            android:src="@drawable/right_arrow" />

    </LinearLayout>

    <ImageView
        android:id="@+id/addIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_add_diet"/>

</RelativeLayout>